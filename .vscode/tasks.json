{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cmake: configure (debug)",
      "type": "shell",
      "command": "cmake -B build -DCMAKE_BUILD_TYPE=Debug -DENABLE_SANITIZERS=OFF",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "cmake: build (debug)",
      "type": "shell",
      "command": "cmake -B build -DCMAKE_BUILD_TYPE=Debug -DENABLE_SANITIZERS=OFF && cmake --build build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "cmake: run tests",
      "type": "shell",
      "command": "cmake --build build --target test",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    }
  ]
}
